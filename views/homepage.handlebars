<h1 style="display: flex; justify-content: center; margin: 5% 0">Current Posts</h1>
{{#each posts as |post| }}
<div class="row align-center mb-5" style="border: 1px solid black; padding: 3%; border-radius: 15px;">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <p>{{post.content}}</p>
  <div class="col-md-6">
    <small>Created by {{post.user}}</small>
  </div>
</div>
{{/each}}