<h1 style="display: flex; justify-content: center; margin: 5% 0">Your Homepage</h1>
{{#each posts as |post| }}
<div class="row align-center mb-5" style="border: 1px solid black; padding: 3%; border-radius: 15px;">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <p>{{post.content}}</p>
  <div class="col-md-6">
    <small>Created by {{post.user.email}}</small>
    <br>
      <button style="font-size: 10px;">Add Comment</button>
      <textarea name="comment_text" id="comment_box" cols="25" rows="1"></textarea>
  </div>
</div>
{{/each}}